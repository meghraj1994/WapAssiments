<%- include('head.ejs')%>
<h1>Product detail</h1>
    <ul>
        <li>Name: <%= name %>
        </li>
        <li>Price: <%= price %>
        </li>
        <li>Description: <%= description %>
        </li>
        <li>Id: <%= id %>
        </li>
    </ul>

    <form action="/addToCart" method="POST">
        <input type="hidden" value="<%= name %>" name="name"></hidden>
        <input type="hidden" value="<%= price %>" name="price"></hidden>
        <button type="submit">Add to Cart</button>
    </form>

    <%- include('end.ejs')%>